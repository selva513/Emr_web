            html += "<table class='table table-bordered table-striped dataTable table-reflow tableHB'>";
            html += "<thead><tr><td></td><td >Male</td><td >Female</td><td >Others</td><td >Total</td></tr></thead>";
            html += "<tbody>";
            html += "<tr><td>Numbers</td>";

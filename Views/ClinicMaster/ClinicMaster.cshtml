                                                {
                                                    <label class="alert alert-danger">@TempData["ClinicFailed"]</label>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">


@{
    ViewData["Title"] = "DrugStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #loading {
        display: none;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.8);
        z-index: 1000;
    }

    #loading1 {
        display: none;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.8);
        z-index: 1000;
    }

    #loadingcontent {
        display: table;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
    }

    #loadingspinner {
        display: table-cell;
        vertical-align: middle;
        width: 100%;
        text-align: center;
        font-size: larger;
        padding-top: 80px;
    }
</style>
<script type="text/javascript">
    function GotoLogin() {
        try {
            window.location.href = "/Login/Login";
        }
        catch (e) {
        }
    }
</script>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div id="loading">
            <div id="loadingcontent">
                @*<p id="loadingspinner">
                        Please Wait...
                    </p>*@
                <div id="loadingspinner">
                    <img src="~/images/loading.gif" style="width:100px;height:100px;" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="card card-primary">
                    <div class="card-header" style="margin-top:10px;">
                        <h3 class="card-title">Drug Stock</h3>
                        <img src="~/images/ShutdownWhite.png" style="float:right;cursor:pointer;" onclick="GotoLogin();" />
                    </div>
                    <div class="card-body">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active aLink" id="custom-tabs-one-home-tab" data-toggle="pill" href="#tabOpeningStock" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Opening Stock</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link aLink" id="custom-tabs-one-home-tab" data-toggle="pill" href="#tabStockStatement" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Stock Statement</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link aLink" id="custom-tabs-one-home-tab" data-toggle="pill" href="#tabStockAdjustment" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Stock Adjustment</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link aLink" id="custom-tabs-one-home-tab" data-toggle="pill" href="#tabStockTransfer" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Stock Transfer</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  aLink" id="custom-tabs-one-home-tab" data-toggle="pill" href="#tabStockReport" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Stock Transfer Report</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  aLink" id="custom-tabs-one-home-tab" data-toggle="pill" href="#tabStockMovements" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Stock Movements</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="tabOpeningStock">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        @await Html.PartialAsync("~/Areas/Pharmacy/Views/OpeningStock/OpeningStock.cshtml")
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabStockStatement">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        @await Html.PartialAsync("~/Areas/Pharmacy/Views/StockStatement/StockStatement.cshtml")
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabStockAdjustment">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        @await Html.PartialAsync("~/Areas/Pharmacy/Views/StockAdjustment/StockAdjustment.cshtml")
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabStockTransfer">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        @await Html.PartialAsync("~/Areas/Pharmacy/Views/StockTransfer/StockTransfer.cshtml")
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabStockReport">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        @await Html.PartialAsync("~/Areas/Pharmacy/Views/StockTransferReport/StockTransferReport.cshtml")
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabStockMovements">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        @await Html.PartialAsync("~/Areas/Pharmacy/Views/StockMovements/StockMovements.cshtml")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>